{
    "compilerOptions": {
        "rootDir": "../",
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "abstract-lang": ["../lib/index.ts"]
        }
    },
    "include": ["./**/*.ts", "../lib/**/*.ts"]
}